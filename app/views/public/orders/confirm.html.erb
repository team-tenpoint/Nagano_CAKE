

  <h2>注文情報確認</h2>
   <table class="table">
    <thead>
     <% @cart_items.each do |cart_item| %>
       <tr>
        <th>商品名</th>
        <th>単価(税込)</th>
        <th>数量</th>
        <th>小計</th>
       </tr>
     </thead>
      <tbody>
       <td><%= image_tag cart_item.item.image, size: "70x70" %><%= cart_item.item.name %></td>
       <td><%= (cart_item.item.price_without_tax * 1.1).floor %></td>
       <td><%= cart_item.quantity %>個</td>
       <td><%= (cart_item.item.price_without_tax * 1.1).floor * (cart_item.quantity) %></td>
      </tbody>
    <% end %>
   </table>

   <div class="table">
     <tr>
       <th>送料</th>
        <td></td>
       <th>合計</th>
        <td></td>
       <th>請求金額</th>
        <td></td>
     </tr>
   </div>


   <%#= f.submit "注文を確定する", class: "btn btn-success" %>