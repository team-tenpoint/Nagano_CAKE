<div class="container">
<div class="row">

<h1>注文履歴詳細</h1>

   <span>注文情報</span>

     <table class ="table">
       <tbody>
        <tr>
         <td class="table-secondary">注文日</td>
         <td><%#= @order.created_at %></td>
        </tr>

       <tr>
        <td class="table-secondary">配送先</td>
        <td>
          〒<%#= @order.postal_code %>
           <%#= @order.delivery_address%>
           <%#= @order.delivery_name %>
        </td>
      </tr>

       <tr>
        <td class="table-secondary">支払方法</td>
        <td><%#= @order.payment_confirmation %></td>
       </tr>

       <tr>
        <td class="table-secondary">ステータス</td>
        <td><%#= @order.order_values %></td>
       </tr>
     </table>

   <span>請求情報</span>
     <table class="table">
       <tbody>
        <tr>
         <td>商品合計</td>
         <td></td>
        </tr>

        <tr>
          <td class="table">配送料</td>
          <td><%= @order_postage %></td>
        </tr>

        <tr>
          <th class="table-secondary">ご請求額</th>
          <td><%#= (@cart_item.item.price_without_tax * 1.1).floor * (cart_item.quantity) + @order_postage  %></td>
        </tr>
       </tbody>
     </table>

   <span>注文内容</span>
    <table class="table">
     <thead>
      <tr>
       <td>商品名</th>
       <td>単価(税込)</th>
       <td>数量</th>
       <td>小計</td>
     </tr>
    </thead>

  <%# @order.order_values.each do |order_value| %>
   <tbody>
    <tr>
      <td><%#= order.product.name %></td>
      <td><%#= order.product.add_tax_price %></td>
      <td><%#= order.quantity %></td>
      <td><%#= (cart_item.item.price_without_tax * 1.1).floor * (cart_item.quantity) %></td>
    </tr>
   </tbody>
  <%# end %>
</table>
</div>
</div>