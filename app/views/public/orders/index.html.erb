<h1>注文履歴一覧</h1>
 <table class="table">
  <thead>
   <tr>
     <th>注文日</th>
     <th>配送先</th>
     <th>注文商品</th>
     <th>支払金額</th>
     <th>ステータス</th>
     <th>注文詳細</th>
    </tr>
  </thead>
    <% @orders.each do |order| %>
     <tbody>
       <tr>
         <td><%= order.created_at %></td>
         <td>〒<%= order.postcode %></td>
         <td><%= order.address %></td>
         <td><%= order.name %></td>
       </tr>
     <% end %>
    </tbody>
      <td><%= link_to "表示する", order_path(order.id), class: "btn btn-primary" %></td>
 </table>