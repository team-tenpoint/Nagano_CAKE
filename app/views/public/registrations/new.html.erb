<div class="container">
  <div class="row">
    <h3 class="px-5 bg-light">新規会員登録</h3>    
  </div>
  <div class="row">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "public/shared/error_messages", resource: resource %>
    
      <div class="field form_group">
        <%= f.label "名前" %>
        <%= f.label :last_name, "(姓)" %>
        <%= f.text_field :last_name, autofocus: true %>
        <%= f.label :first_name, "(名)" %>
        <%= f.text_field :first_name %>
      </div>
    
    
      <div class="field form_group">
        <%= f.label "フリガナ" %>
        <%= f.label :last_name_kana, "(セイ)" %>
        <%= f.text_field :last_name_kana %>
        <%= f.label :first_name_kana, "(メイ)" %>
        <%= f.text_field :first_name_kana %>
      </div>
    
    
      <div class="field form_group">
        <%= f.label :email, "メールアドレス" %>
        <%= f.email_field :email, autocomplete: "email" %>
      </div>
    
      <div class="field form_group">
        <%= f.label :postal_code, "郵便番号(ハイフンなし)" %>
        <%= f.text_field :postal_code %>
      </div>
    
      <div class="field form_group">
        <%= f.label :address, "住所" %>
        <%= f.text_field :address %>
      </div>
    
      <div class="field form_group">
        <%= f.label :telephone_number, "電話番号(ハイフンなし)" %>
        <%= f.text_field :telephone_number %>
      </div>
    
      <div class="field form_group">
        <%= f.label :password, "パスワード" %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> 文字以上)</em>
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>
    
      <div class="field form_group">
        <%= f.label :password_confirmation, "パスワード(確認用)" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>
    
      <div class="actions form_group">
        <%= f.submit "新規登録", class: "btn btn-success"%>
      </div>
    <% end %>
  </div>
  <div class="row">
    <h3 class="px-5 bg-light">既に登録済みの方</h3>
  </div>
  <div class="row">
    <p><%= render "public/shared/links" %>からログインしてください</p>
  </div>
</div>


