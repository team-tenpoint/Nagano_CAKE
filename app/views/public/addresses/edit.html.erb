<div class='container'>
  <h3 class="px-5 bg-light">配送先編集</h3>
  <%= form_with model: @address, local:true ,method: :patch do |f| %>

  <div class="form-group row">
    <%= f.label :postal_code, '郵便番号（ハイフンなし）',class: "col-3" %>
    <%= f.text_field :postal_code, class: "col-8" %>
  </div>

  <div class="form-group row">
    <%= f.label :address, '住所',class: "col-3" %>
    <%= f.text_field :address, class:"col-8" %>
  </div>

  <div class="form-group row">
    <%= f.label :name, '宛名',class: "col-3" %>
    <%= f.text_field :name, class: "col-6" %>
    <%= f.submit '変更内容を保存',class: 'btn btn-success ml-3' %>
  </div>
  <% end %>
  <%= link_to 'Back', addresses_path %>
</div>