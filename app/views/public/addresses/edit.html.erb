<div class='container'>
  <h3 class="px-5 bg-light">配送先編集</h3>
  <%= form_with model: @address, local:true ,method: :patch do |f| %>

  <div class="form-group row">
   <div class="form-inline">
    <%= f.label :postal_code, '郵便番号（ハイフンなし）',class: "col-4" %>
    <%= f.text_field :postal_code, class: "form-control col-4" %>
    </div>
  </div>

  <div class="form-group row">
    <div class="form-inline">
    <%= f.label :address, '住所',class: "col-4" %>
    <%= f.text_field :address, class:"form-control col-4" %>
    </div>
  </div>

  <div class="form-group row">
    <div class="form-inline">
    <%= f.label :name, '宛名' %>
    <%= f.text_field :name, class: "form-control col-4" %>
    <%= f.submit '変更内容を保存',class: 'btn btn-success' %>
  </div>
</div>
  <% end %>
  <%= link_to 'Back', addresses_path %>
</div>