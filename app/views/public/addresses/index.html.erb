<div class = "container">
  <%= form_with model: @address, method: :post, local:true do |f| %>
  <div class = "row">
    <h3>配送先登録/一覧</h3>
  </div>
  <div class = "row">
    <div class="form-inline mt-4">
      <%= f.label :postal_code, '郵便番号（ハイフンなし）',class: " col-3" %>
      <%= f.text_field :postal_code, placeholder: '0000000',class: "form-control  col-3" %>
    </div>
    <div class="form-inline mt-2">
      <%= f.label :address, '住所', class: "col-3"%>
      <%= f.text_field :address, placeholder: '東京都渋谷区代々木神園町0-0',class: "form-control  col-8" %>
    </div>
    <div class="form-inline mt-2">
      <%= f.label :name, '宛名', class: "col-3" %>
      <%= f.text_field :name, placeholder: '令和道子',class: "form-control  col-3" %>
    </div>
    <div class="form-inline">
      <%= f.submit  '新規登録',class: 'btn btn-success' %>
    </div>
  </div>
  
  <% end %>

  <div class = "row">
    <table>
      <thead>
        <tr>
          <th>郵便番号</th>
          <th>住所</th>
          <th>宛名</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @addresses.each do |address| %>
        <tr>
          <th><%= address.postal_code %></th>
          <th><%= address.address %></th>
          <th><%= address.name %></th>
          <th>
            <%= link_to "編集する", edit_address_path(address), class:"btn"%>
            <%= link_to "削除する",address_path(address), method: :delete, class:"btn"%>
          </th>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>