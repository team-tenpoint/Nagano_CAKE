<div class = "container">
  <p class ="text-success"><%= notice %></p>
  <div class ="row">
   <div class="col-1"></div>
   <div class="col-11">
    <h3 class ="px-5 bg-light">マイページ</h3>
  </div>
 </div>
 
 
   <div class="form-group row">
      <h4 class="px-3">登録情報</h4>
        <%= link_to "編集する", edit_customer_path(@customer.id),class: "btn btn-success" %>
    </div>
  
    
     
   <div class="row">
      <table class="table table-bordered">
        <thead>
          <tr>
            <th scope="col" class="bg-light font-weight-normal">氏名</th>
            <th class="font-weight-normal"><%= @customer.last_name %> <%= @customer.first_name %></th>
          </tr>
        </thead>

        <tbody>
          <tr>
            <td scope="col" class="bg-light">カナ</td>
            <td><%= @customer.last_name_kana %> <%= @customer.first_name_kana %></td>
          </tr>

          <tr>
            <td scope="col" class="bg-light">郵便番号</td>
            <td><%= @customer.postal_code %></td>
          </tr>

          <tr>
            <td scope="col" class="bg-light">住所</td>
            <td><%= @customer.address %></td>
          </tr>
          
          <tr>
            <td scope="col" class="bg-light">電話番号</td>
            <td><%= @customer.telephone_number %></td>
          </tr>

          <tr>
            <td scope="col" class="bg-light">メールアドレス</td>
            <td><%= @customer.email %></td>
          </tr>
        </tbody>
      </table>
    </div>

  <div class='row d-flex align-items-end form-group'>
    <div class="col-4">
        <span class="px-3">配送先</span>
           <%= link_to "一覧を見る",addresses_path,class: "btn btn-primary" %>
    </div>
  </div>

  <div class='row d-flex align-items-end form-group'>
    <div class="col-4">
        <span class="px-3">注文履歴</span>
      <%= link_to "一覧を見る",orders_path,class: "btn btn-primary" %>
    </div>
  </div>
</div>
