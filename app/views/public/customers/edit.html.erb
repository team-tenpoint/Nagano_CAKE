
<div class="contener">
  <div class ="row">
   <div class="col-1"></div>
   <div class="col-11">
    <h4 class ="px-5 bg-light">会員情報編集</h4>
     <%= form_with model: @customer, url: customer_path(@customer.id), method: :patch do |f| %>

        <div class="field form_group row mb-2">
          <th>会員ID</th>
           <td><%= @customer.id %></td>
         </div>

         <div class="form-group row">
          <th>氏名</th>
            <td><%= f.text_field :last_name, class: "col-4" %></td>
            <td><%= f.text_field :first_name, class: "col-2" %></td>
         </div>

          <div class="form-group row">
           <th>フリガナ</th>
            <td><%= f.text_field :last_name_kana %></td>
            <td><%= f.text_field :first_name_kana %></td>
          </div>

            <div class="form-group row">
              <th>郵便番号</th>
               <td><%= f.text_field :postal_code %></td>
            </div>

             <div class="form-group row">
             <th>住所</th>
              <td><%= f.text_field :address %></td>
           </div>


           <div class="form-group row">
           <th>電話番号</th>
            <td><%= f.text_field :telephone_number %></td>
           </div>

          <div class="form-group row">
           <th>メールアドレス</th>
            <td><%= f.text_field :email %></td>
          </div>


            <div class="mx-auto">
               <%= f.submit '変更を保存', class:"btn btn-success" %>

               <%= link_to "退会する", quit_path, class:"btn btn-danger" %>
           </div>
        </div>
      <% end %>
     </div>
  </div>
