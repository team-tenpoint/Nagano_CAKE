<div class="contener">
 <div class="row">
  <h2><%= @customer.last_name %><%= @customer.first_name %>さんの会員情報編集</h2>

   <%= form_with model: @customer, url: admin_customer_path(@customer.id), method: :patch do |f| %>
    <div class="form-group">
      会員ID
       <%= @customer.id %>
     </div>
     
     <div class="form-group">
       氏名
        <%= f.text_field :last_name %>
        <%= f.text_field :first_name %>
      </div>

     <div class="form-group">
       フリガナ
         <%= f.text_field :last_name_kana %>
         <%= f.text_field :first_name_kana %>
     </div>
     
     <div class="form-group">
        郵便番号
        <%= f.text_field :postal_code %>
      </div>

     <div class="form-group">
        住所
        <%= f.text_field :address %>
     </div>

      <div class="form-group">
         電話番号
         <%= f.text_field :telephone_number %>
      </div>

      <div class="form-group">
         メールアドレス
         <%= f.text_field :email %>
       </div>

      <div class="form-group">
         会員ステータス
          <%= f.radio_button :is_deleted, false %>
          <%= f.label :is_deleted, "有効" %>
          <%= f.radio_button :is_deleted, true %>
          <%= f.submit '変更を保存', class:"btn btn-success" %><br />
       </div>
      <% end %>
  </div>
 </div>