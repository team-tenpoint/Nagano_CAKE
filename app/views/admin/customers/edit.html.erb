<div class="contener">
 <div class="row">
  <h2><%= @customer.last_name %><%= @customer.first_name %>さんの会員情報編集</h2>
   <table class="table">
   <%= form_with model: @customer, url: admin_customer_path(@customer.id), method: :patch do |f| %>
      <tbody>
        <tr>
         <th colspan="2"></th>
         <th>会員ID</th>
          <td><%= @customer.id %></td>
           <th>氏名</th>
            <td><%= f.text_field :last_name %></td>
            <td><%= f.text_field :first_name %></td>

           <th>フリガナ</th>
            <td><%= f.text_field :last_name_kana %></td>
            <td><%= f.text_field :first_name_kana %></td>

           <th>郵便番号</th>
            <td><%= f.text_field :postal_code %></td>

           <th>住所</th>
            <td><%= f.text_field :address %></td>

           <th>電話番号</th>
            <td><%= f.text_field :telephone_number %></td>

           <th>メールアドレス</th>
            <td><%= f.text_field :email %></td>

           <th>会員ステータス</th>
            <td>
             <%= f.radio_button :is_deleted, false %>
             <%= f.label :is_deleted, "有効" %>
             <%= f.radio_button :is_deleted, true %>
             <%= f.label :is_deleted, "退会" %>
            </td>
          <th></th>
         <td><br><%= f.submit '変更を保存', class:"btn btn-success" %><br /></td>
       </tr>
      <% end %>
     </tbody>
  </div>
  </div>
 </div>