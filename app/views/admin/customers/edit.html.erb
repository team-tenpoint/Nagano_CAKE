<div class="contener">
 <div class="row">
  <div class="col-1"></div>
   <div class="col-11">
   <h3 class="px-4 bg-light"><%= @customer.last_name %><%= @customer.first_name %>さんの会員情報編集</h3>

   <%= form_with model: @customer, url: admin_customer_path(@customer.id), method: :patch do |f| %>

    <div class="form-group row">
      会員ID
       <div class="col-3"><%= @customer.id %></div>
    </div>

     <div class="form-group row">
       氏名
        <div class="col-2"><%= f.text_field :last_name %></div>
        <div class="col-8"><%= f.text_field :first_name %></div>
      </div>

     <div class="form-group row">
       フリガナ
         <div class="col-2"><%= f.text_field :last_name_kana %></div>
         <div class="col-8"><%= f.text_field :first_name_kana %></div>
     </div>

     <div class="form-group row">
        郵便番号
        <div class="col-2"><%= f.text_field :postal_code %></div>
      </div>

     <div class="form-group row">
        住所
        <div class="col-4"><%= f.text_field :address %></div>
     </div>

      <div class="form-group row">
         電話番号
         <div class="col-2"><%= f.text_field :telephone_number %></div>
      </div>

      <div class="form-group row">
         メールアドレス
         <div class="col-2"><%= f.text_field :email %></div>
       </div>

        <div class="form-group row">
         会員ステータス
          <%= f.radio_button :is_deleted, false %>
          <%= f.label :is_deleted, "有効"  %>
          <%= f.radio_button :is_deleted, true %>
          <%= f.label :is_deleted, "無効" %>
         </div>
       <%= f.submit '変更を保存', class:"btn btn-success" %><br />
      <% end %>
     </div>
   </div>
 </div>