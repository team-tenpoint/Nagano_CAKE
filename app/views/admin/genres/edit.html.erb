<% if @genre.errors.any? %>
  <%= @genre.errors.count %>件のエラーが発生しました
  <ul>
    <% @genre.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<h1>ジャンル編集</h1>
<%= form_with model: @genre, url: admin_genre_path(@genre), method: :patch do |f| %>
  <%= f.label :genre_name, "ジャンル名" %>
  <%= f.text_field :genre_name %>
  <%= f.submit "変更を保存" %>
<% end %>
