<div>
    <h1>注文履歴一覧</h1>
    <table>
      <thead>
          <tr>
              <th>購入日時</th>
              <th>購入者</th>
              <th>注文個数</th>
              <th>注文ステータス</th>
          </tr>
      </thead>
      <tbody>
        <% @orders.each do |order| %>
          <tr>
              <th>
                <%= link_to admin_order_path(order) do %>
                  <%= order.created_at.strftime('%Y/%m/%d %H:%M') %>
                <% end %>
              </th>
              <th>
                <%=  order.customer.last_name %>
                <%=  order.customer.first_name %>
              </th>
              <th>
                <%= order.order_detail.quanity %>
              </th>
              <th>
                <%= order.order_status_i18n %>
              </th>
          </tr>
        <% end %>
      </tbody>
    </table>
</div>

