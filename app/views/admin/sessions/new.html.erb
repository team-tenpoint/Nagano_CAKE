<div class="container">
  <div class="row">
    <h3 class="px-5 bg-light">管理者ログイン</h3>
  </div>
  <div class="row">
    <div class="offset-2">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field form_group row mb-3">
          <%= f.label :email, "メールアドレス", class: "col-5" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-5" %>
        </div>

        <div class="field form_group row mb-3">
          <%= f.label :password, "パスワード", class: "col-5" %>
          <%= f.password_field :password, autocomplete: "current-password", class: "col-5" %>
        </div>

        <div class="actions form_group row">
          <%= f.submit "ログイン", class: "btn btn-primary offset-5" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<%= render "admin/shared/links" %>
