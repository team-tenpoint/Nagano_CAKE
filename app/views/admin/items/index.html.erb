<h1>商品一覧ページ</h1>

<%= link_to "商品新規登録", new_admin_item_path %>

<table>
  <thead>
    <tr>
      <th>商品ID</th>
      <th>商品名</th>
      <th>税抜価格</th>
      <th>ジャンル</th>
      <th>ステータス</th>
    </tr>
  </thead>
  <tbody>
    <% @items.each do |item| %>
    <tr>
      <td><%= item.id %></td>
      <td><%= link_to item.name, admin_item_path(item) %></tdz>
      <td><%= item.price_without_tax.to_s(:delimited) %></td>
      <td><%= item.genre.genre_name %></td>
      <% if item.is_active == true %>
        <td>販売中</td>
      <% else %>
        <td>販売停止中</td>
      <% end %>
    </tr>
    <% end %>
  </tbody>
</table>
