<div class="container">
  <div class="row">
    <h3 class="px-5 bg-light">商品詳細</h3>
  </div>
  <div class="row">
    <div class="col-5">
      <%= image_tag @item.image, size: "400x300" %>
    </div>
    <div class="col-7">
      <table>
        <tbody>
          <tr>
            <td>商品名</td>
            <td><%= @item.name%></td>
          </tr>
          <tr>
            <td>商品説明</td>
            <td><%= @item.opinion %></td>
          </tr>
          <tr>
            <td>ジャンル</td>
            <td><%= @item.genre.genre_name %></td>
          </tr>
          <tr>
            <td>税込価格<br>(税抜価格)</td>
            <td><%= (@item.price_without_tax*1.1).floor.to_s(:delimited)%>(<%= (@item.price_without_tax).floor.to_s(:delimited) %>)円</td>
          </tr>
          <tr>
            <td>販売ステータス</td>
            <% if @item.is_active == true %>
              <td>販売中</td>
            <% else %>
              <td>売切れ</td>
            <% end %>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col-12 text-center">
      <%= link_to "編集する", edit_admin_item_path(@item.id), class: "btn btn-success" %>
    </div>
  </div>
</div>







