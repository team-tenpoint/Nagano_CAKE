<% if @item.errors.any? %>
  <%= @item.errors.count %>件のエラーが発生しました
  <ul>
    <% @item.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<div class="container">
  <div class="row">
    <h3 class="px-5 bg-light">商品新規登録</h3>
  </div>
  <div class="row">
    <div class="col-6 offset-3">
      <%= form_with model: @item, url: "/admin/items", method: :post do |f| %>
        <div class="form_group row mb-2">
          <%= label :image, "商品画像", class: "col-3" %>
          <%= f.file_field :image, accept: "image/*", class: "col-9" %>
        </div>
        <div class="form-group row mb-2">
          <%= label :name, "商品名", class: "col-3" %>
          <%= f.text_field :name, placeholder: "商品名", class: "col-9" %>
        </div>
        <div class="form-grou row mb-2">
          <%= label :opinion, "商品説明", class: "col-3" %>
          <%= f.text_area :opinion, placeholder: "ここに説明文を記述します", class: "col-9" %>
        </div>
        <div class="form_group row mb-2">
          <%= label :genre_id, "ジャンル", class: "col-3" %>
          <%= f.select :genre_id, options_from_collection_for_select(Genre.all, :id, :genre_name), {prompt: "-- 選択してください"}, class: "col-9" %>
        </div>
        <div class="form-group row mb-2">
          <%= label :price_without_tax, "税抜価格", class: "col-3" %>
          <%= f.text_field :price_without_tax, placeholder: "1000", class: "col-9" %>
        </div>
        <div class="form_group row mb-2">
          <%= label :is_active, "販売ステータス", class: "col-3" %>
          <span class="col-9">
            <%= f.radio_button :is_active, true %>
            <%= f.label :is_active, "販売中", value: true %>
            <%= f.radio_button :is_active, false %>
            <%= f.label :is_active, "販売停止中", value: false %>
          </span>
        </div>
        <div class="form_group row mb-2">
          <div class="col-12 text-center">
            <%= f.submit "新規登録", class: "btn btn-success" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>


